{
  "manifest_version": 3,
  "name": "FocusFlow Pro â€” Pomodoro & Focus Timer",
  "short_name": "FocusFlow",
  "version": "1.0.0",
  "description": "Beautiful Pomodoro timer with distraction blocking, ambient sounds, and productivity stats. Stay focused, get more done.",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
